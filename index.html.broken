.candle {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 40px;
    height: 60px;
    background: linear-gradient(to bottom, 
        #8B4513 0%,
        #A0522D 30%,
        #D2691E 100%
    );
    border-radius: 20px 20px 10px 10px;
    z-index: 1000;
    cursor: pointer;
    animation: candleFloat 3s infinite ease-in-out;
}

.candle::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 30px;
    background: linear-gradient(to bottom, 
        #FFD700,
        #FF8C00,
        #FF4500
    );
    border-radius: 10px 10px 5px 5px;
