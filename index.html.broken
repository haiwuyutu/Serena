    .pinyin-grid {
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    }
    
    .tone-buttons {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .control-buttons {
        flex-direction: column;
    }
    
    .sky-control-btn {
        width: 100%;
    }
