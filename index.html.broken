    font-size: 1.2em;
    animation: bounce 2s infinite;
}

@keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

.sky-subtitle {
    font-size: 1.3em;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    margin-top: 10px;
}

/* 光之子角色装饰 */
.sky-character {
    position: absolute;
    width: 80px;
    height: 80px;
    background: var(--ui-cape);
    border-radius: 50% 50% 40% 40%;
    top: -40px;
    right: 50px;
    transform: rotate(15deg);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.sky-character::before {
    content: '';
    position: absolute;
    width: 60px;
    height: 40px;
    background: var(--ui-cape);
    border-radius: 30px;
    bottom: -20px;
    left: 10px;
}

.sky-character::after {
    content: '';
    position: absolute;
    width: 40px;
    height: 20px;
    background: var(--ui-skin);
    border-radius: 20px;
    top: 20px;
    left: 20px;
}

/* 卡片样式 - 像光遇中的建筑 */
.sky-card {
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(15px);
    border-radius: 30px;
    padding: 30px;
    margin-bottom: 30px;
    border: 2px solid rgba(255, 255, 255, 0.4);
    box-shadow: 
        0 15px 35px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.6);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.sky-card:hover {
    transform: translateY(-10px);
    box-shadow: 
        0 25px 50px rgba(0, 0, 0, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
    border-color: rgba(255, 215, 0, 0.6);
}

.sky-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
    );
    transition: left 0.5s;
}

.sky-card:hover::before {
    left: 100%;
}

.card-title {
    font-size: 1.8em;
    color: var(--sky-night);
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
    padding-bottom: 10px;
    border-bottom: 2px dashed rgba(255, 255, 255, 0.5);
}

.card-title i {
    color: var(--sky-star);
    animation: spin 4s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* 拼音按钮 - 像光遇中的烛光 */
.pinyin-light {
    background: linear-gradient(145deg, 
        rgba(255, 215, 0, 0.9),
        rgba(255, 165, 0, 0.9)
    );
    border: none;
    border-radius: 20px;
    padding: 20px;
    font-size: 2em;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 
        0 10px 20px rgba(255, 215, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
}

.pinyin-light:hover {
    transform: scale(1.1) translateY(-5px);
    box-shadow: 
        0 15px 30px rgba(255, 215, 0, 0.5),
        0 0 40px rgba(255, 215, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
    animation: glow 1.5s infinite alternate;
}

.pinyin-light:active {
    transform: scale(0.95);
}

@keyframes glow {
    from { box-shadow: 
        0 10px 20px rgba(255, 215, 0, 0.3),
        0 0 30px rgba(255, 215, 0, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
    }
    to { box-shadow: 
        0 10px 20px rgba(255, 215, 0, 0.4),
        0 0 50px rgba(255, 215, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
    }
}

.pinyin-light.playing {
    background: linear-gradient(145deg, 
        rgba(0, 191, 255, 0.9),
        rgba(30, 144, 255, 0.9)
    );
    animation: pulse 0.5s;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
}

/* 拼音网格 */
.pinyin-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

/* 控制按钮 - 像光遇中的乐器 */
.sky-control-btn {
    background: linear-gradient(145deg, 
        rgba(147, 112, 219, 0.9),
        rgba(138, 43, 226, 0.9)
    );
    border: none;
    border-radius: 25px;
    padding: 18px 30px;
    color: white;
    font-size: 1.1em;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 
        0 10px 20px rgba(147, 112, 219, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    position: relative;
    overflow: hidden;
}

.sky-control-btn::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
        circle at center,
        rgba(255, 255, 255, 0.2) 0%,
        transparent 70%
    );
    opacity: 0;
    transition: opacity 0.3s;
}

.sky-control-btn:hover {
    transform: translateY(-5px);
    box-shadow: 
        0 15px 30px rgba(147, 112, 219, 0.4),
        0 0 40px rgba(147, 112, 219, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.6);
}

.sky-control-btn:hover::after {
    opacity: 1;
}

.sky-control-btn.stop {
    background: linear-gradient(145deg, 
        rgba(255, 99, 71, 0.9),
        rgba(255, 69, 0, 0.9)
    );
}

.sky-control-btn.record {
    background: linear-gradient(145deg, 
        rgba(50, 205, 50, 0.9),
        rgba(34, 139, 34, 0.9)
    );
}

.control-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    justify-content: center;
    margin: 20px 0;
}

/* 声调按钮 - 不同颜色代表不同声调 */
.tone-btn {
    background: linear-gradient(145deg, 
        var(--ui-spirit),
        rgba(152, 251, 152, 0.8)
    );
    border: none;
    border-radius: 20px;
    padding: 25px 15px;
    font-size: 1.8em;
    color: #2E8B57;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.tone-btn:nth-child(1) { 
    background: linear-gradient(145deg, #FFB6C1, #FF69B4);
    color: #8B0000;
}
.tone-btn:nth-child(2) { 
    background: linear-gradient(145deg, #FFD700, #FFA500);
    color: #8B4513;
}
.tone-btn:nth-child(3) { 
    background: linear-gradient(145deg, #98FB98, #32CD32);
    color: #006400;
}
.tone-btn:nth-child(4) { 
    background: linear-gradient(145deg, #87CEEB, #4169E1);
    color: #00008B;
}

.tone-btn:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
}

.tone-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

/* 常用词按钮 */
.word-btn {
    background: linear-gradient(145deg, 
        rgba(255, 182, 193, 0.9),
        rgba(255, 105, 180, 0.9)
    );
    border: none;
    border-radius: 20px;
    padding: 20px 15px;
    font-size: 1.3em;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 16px rgba(255, 105, 180, 0.2);
}

.word-btn:hover {
    transform: translateY(-5px) rotate(3deg);
    box-shadow: 0 12px 24px rgba(255, 105, 180, 0.3);
}

.words-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 15px;
    margin-top: 20px;
}

/* 录音区域 */
.record-section {
    background: linear-gradient(145deg, 
        rgba(135, 206, 235, 0.3),
        rgba(70, 130, 180, 0.3)
    );
    border-radius: 30px;
    padding: 30px;
    margin: 30px 0;
    border: 2px solid rgba(255, 255, 255, 0.3);
}

.waveform {
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    margin: 20px 0;
    position: relative;
    overflow: hidden;
    border: 2px solid rgba(255, 255, 255, 0.4);
}

.wave-bar {
    position: absolute;
    bottom: 0;
    width: 6px;
    background: linear-gradient(to top, 
        var(--sky-star),
        var(--sky-sunset)
    );
    border-radius: 3px;
    animation: wave 1.5s infinite ease-in-out;
}

@keyframes wave {
    0%, 100% { height: 30%; }
    50% { height: 90%; }
}

/* 页脚 */
.sky-footer {
    text-align: center;
    padding: 30px;
    margin-top: 40px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: 30px;
    border-top: 2px solid rgba(255, 255, 255, 0.3);
}

.footer-text {
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

/* 响应式设计 */
@media (max-width: 768px) {
    .sky-title {
        font-size: 2.5em;
        flex-direction: column;
        gap: 10px;
    }
    
    .pinyin-grid {
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    }
    
    .tone-buttons {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .control-buttons {
        flex-direction: column;
    }
    
    .sky-control-btn {
        width: 100%;
    }
}

/* 特别效果：光遇蜡烛 */
.candle {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 40px;
    height: 60px;
    background: linear-gradient(to bottom, 
        #8B4513 0%,
        #A0522D 30%,
        #D2691E 100%
    );
    border-radius: 20px 20px 10px 10px;
    z-index: 1000;
    cursor: pointer;
    animation: candleFloat 3s infinite ease-in-out;
}

.candle::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 30px;
    background: linear-gradient(to bottom, 
        #FFD700,
        #FF8C00,
        #FF4500
    );
    border-radius: 10px 10px 5px 5px;
    animation: flame 1.5s infinite alternate;
}

@keyframes candleFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

@keyframes flame {
    0%, 100% { 
        height: 30px;
        box-shadow: 0 0 20px #FFD700, 0 0 40px #FF8C00;
    }
    50% { 
        height: 40px;
        box-shadow: 0 0 30px #FFD700, 0 0 60px #FF8C00;
    }
}
